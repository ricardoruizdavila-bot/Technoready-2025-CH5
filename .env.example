# Copiar a .env localmente o configurar las variables en CI/servidor.

# Perfil activo (dev | test | prod)
SPRING_PROFILES_ACTIVE=dev

# Puertos
PORT=8081

# Development DB (defaults safe for local)
DEV_DB_URL=jdbc:h2:mem:devdb
DEV_DB_USER=sa
DEV_DB_PASS=

# Test DB
TEST_DB_URL=jdbc:h2:mem:testdb
TEST_DB_USER=sa
TEST_DB_PASS=

# Production DB (MUST be set in production environment)
DB_URL=jdbc:postgresql://localhost:5432/orders
DB_USER=app
DB_PASS=app123

# Peer review level (low | medium | high)
PEER_REVIEW_LEVEL=medium
